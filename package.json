{
  "name": "grimoire3d",
  "version": "0.0.0",
  "description": "3D magical book documentation generator - Transform your docs into an interactive grimoire",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "documentation",
    "docs",
    "static-site-generator",
    "markdown",
    "mermaid",
    "page-flip",
    "book",
    "react",
    "3d",
    "grimoire",
    "webgl"
  ],
  "author": "kkm-horikawa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkm-horikawa/grimoire3d.git"
  },
  "bugs": {
    "url": "https://github.com/kkm-horikawa/grimoire3d/issues"
  },
  "homepage": "https://github.com/kkm-horikawa/grimoire3d#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "lucide-react": "^0.555.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.2.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  }
}
